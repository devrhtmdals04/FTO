{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vite/client", "node"],
    "baseUrl": ".",
    "paths": {
      "tactics": ["packages/tactics/src/index.ts"],
      "tactics/*": ["packages/tactics/src/*"]
    }
  },
  "include": ["packages/**/*.ts", "vite.config.ts"],
  "exclude": ["node_modules"]
}
